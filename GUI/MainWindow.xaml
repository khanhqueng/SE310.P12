<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="653" Width="969">
    <Grid>
        <StackPanel>
            <Button x:Name="BtnAddSheep" Content="Add Sheep" Click="BtnAddSheep_Click" Height="55" Width="385"/>
            <Button x:Name="BtnAddCow" Content="Add cow" Click="BtnAddCow_Click" Height="55" Width="385"/>
            <Button x:Name="BtnAddGoat" Content="Add Goat" Click="BtnAddGoat_Click" Height="55" Width="385"/>
            <Button x:Name="BtnFeedAnimals" Content="Feed Animals" Click="BtnFeedAnimals_Click" Height="98"/>
            <Button x:Name="BtnCollectMilk" Content="Collect Milk" Click="BtnCollectMilk_Click" Height="84"/>
            <Button x:Name="BtnReproduce" Content="Reproduce Animal" Click="BtnReproduce_Click" Height="102"/>
            <TextBlock Name="StatisticsText" Margin="10" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
